<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Event" parent="AppBaseTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Event.header">
        <item name="android:background">#303030</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="Event.header.title">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Event.header.title.first">
        <item name="android:paddingTop">30dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Event.header.subsubtitle.last">
        <item name="android:paddingBottom">30dp</item>
    </style>

    <style name="Event.header.subsubtitle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Event.header.subtitle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Event.normaltext">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>